# Arduino CLI Configuration File
# Copy this to arduino-cli.yaml and customize as needed
# Or let the setup script create it automatically

board_manager:
  additional_urls:
    - https://raw.githubusercontent.com/espressif/arduino-esp32/gh-pages/package_esp32_index.json

directories:
  user: D:\_dev\_Projects\dev-boards\Arduino\home
  data: D:\_dev\_Projects\dev-boards\Arduino

