#!/usr/bin/env python3
"""Cross-platform terminal output demonstration script.

Demonstrates boxed header, header, error, warning, and info messages
following the terminal output formatting rules.
"""

import sys
import os

# Enable ANSI colors on Windows 10+
if sys.platform == "win32":
    # Enable virtual terminal processing for ANSI colors
    try:
        import ctypes
        kernel32 = ctypes.windll.kernel32
        kernel32.SetConsoleMode(kernel32.GetStdHandle(-11), 7)
    except Exception:
        pass  # Fall back to basic colors if this fails


# ============================================================================
# STYLE PALETTE DEFINITIONS
# ============================================================================

class Colors:
    """Base ANSI control codes."""
    RESET = '\033[0m'
    BOLD = '\033[1m'
    DIM = '\033[2m'


class StylePalette:
    """Style palette definitions for terminal output.
    
    Includes colors, icons, and formatting requirements for each message type.
    Organized by purpose: error, warning, info, success, and banner styles.
    All colors use ANSI codes for maximum cross-platform compatibility.
    
    Icon Formatting Rules:
    - ERROR: ✗ (U+2717) - No special formatting
    - WARNING: ⚠ (U+26A0) - No special formatting, blank line above
    - INFO: ｉ (U+FF49, full-width i) - Icon is BOLD, text is normal weight
    - SUCCESS: ✔ (U+2714, heavy checkmark) - No special formatting
    """
    
    # Error style - Bright red for visibility
    ERROR = {
        'color': '\x1B[38;5;196m',  # Bright red (#ff0000) - Code 196
        'icon': '✗',  # U+2717 - Error icon
        'icon_format': None,  # No special formatting needed
        'icon_unicode': 'U+2717',
        'spacing': ' ',  # Space after icon
        'text_format': None  # Text uses same color as icon
    }
    
    # Warning style - Bright yellow for attention
    WARNING = {
        'color': '\x1B[38;5;226m',  # Bright yellow (#ffff00) - Code 226
        'icon': '⚠',  # U+26A0 - Warning icon
        'icon_format': None,  # No special formatting needed
        'icon_unicode': 'U+26A0',
        'spacing': ' ',  # Space after icon
        'text_format': None,  # Text uses same color as icon
        'blank_line_above': True  # Warning messages need blank line above
    }
    
    # Info style - Bright blue for information
    INFO = {
        'color': '\x1B[38;2;0;153;255m',  # RGB: #0099ff (bright blue)
        'icon': 'ｉ',  # U+FF49 - Full-width i (info icon)
        'icon_format': Colors.BOLD,  # Info icon MUST be bold
        'icon_unicode': 'U+FF49',
        'spacing': ' ',  # Space after icon
        'text_format': None  # Text is normal weight (not bold)
    }
    
    # Success style - Bright green for positive feedback
    SUCCESS = {
        'color': '\x1B[38;5;46m',  # Bright green (#00ff00) - Code 46
        'icon': '✔',  # U+2714 - Heavy checkmark (success icon)
        'icon_format': None,  # No special formatting needed
        'icon_unicode': 'U+2714',
        'spacing': ' ',  # Space after icon
        'text_format': None  # Text uses same color as icon
    }
    
    # Banner styles
    MAIN_TITLE = {
        'color': '\x1B[38;5;51m',  # Bright cyan (#00ffff) - Super Vibrant - Code 51
        'icon': None,  # No icon for banners
        'icon_format': None,
        'spacing': None
    }
    
    SUB_HEADER = {
        'color': '\x1B[38;5;33m',  # Bright blue (#0087ff) - Vibrant - Code 33
        'icon': None,  # No icon for headers
        'icon_format': None,
        'spacing': None
    }
    
    # Additional utility styles
    HIGHLIGHT = {
        'color': '\x1B[38;5;179m',  # Gold (#d7af5f) - Code 179
        'icon': None,
        'icon_format': None,
        'spacing': None
    }
    
    DIM_TEXT = {
        'color': '\x1B[2m\x1B[38;5;244m',  # Dim gray (#808080) - Code 244
        'icon': None,
        'icon_format': None,
        'spacing': None
    } 




def write_boxed_header(title: str, width: int = 75): #>
    """Write a boxed header using MAIN_TITLE style from palette."""
    style = StylePalette.MAIN_TITLE
    color = style['color']
    color_reset = Colors.RESET
    
    top_bottom = '━' * (width - 2)
    
    print(f"{color}┏{top_bottom}┓{color_reset}")
    # Center the title
    padding = (width - 2 - len(title)) // 2
    left_pad = ' ' * padding
    right_pad = ' ' * (width - 2 - len(title) - padding)
    print(f"{color}┃{left_pad}{title}{right_pad}┃{color_reset}")
    print(f"{color}┗{top_bottom}┛{color_reset}")

#<
 
def write_header(title: str, width: int = 65): #>
    """Write a header using SUB_HEADER style from palette."""
    style = StylePalette.SUB_HEADER
    color = style['color']
    color_reset = Colors.RESET
    
    tail = '─' * (width - len(title) - 5)
    print(f"{color}┌─ {title} {tail}{color_reset}")

#<


def print_error(message: str):
    """Print error message using ERROR style from palette."""
    style = StylePalette.ERROR
    icon = style['icon']
    icon_format = style['icon_format'] or ''
    spacing = style['spacing']
    color = style['color']
    
    icon_formatted = f"{icon_format}{icon}{Colors.RESET}" if icon_format else icon
    print(f"{color}{icon_formatted}{spacing}{message}{Colors.RESET}", file=sys.stderr, flush=True)


def print_warning(message: str):
    """Print warning message using WARNING style from palette."""
    style = StylePalette.WARNING
    icon = style['icon']
    icon_format = style['icon_format'] or ''
    spacing = style['spacing']
    color = style['color']
    
    if style.get('blank_line_above'):
        print()  # Blank line above warning
    
    icon_formatted = f"{icon_format}{icon}{Colors.RESET}" if icon_format else icon
    print(f"{color}{icon_formatted}{spacing}{message}{Colors.RESET}", file=sys.stderr, flush=True)


def print_info(message: str):
    """Print info message using INFO style from palette.
    
    Info icon is BOLD, text is normal weight (per terminal output rules).
    """
    style = StylePalette.INFO
    icon = style['icon']
    icon_format = style['icon_format']
    spacing = style['spacing']
    color = style['color']
    
    # Info icon is bold, text is normal weight
    if icon_format:
        # Icon: bold + color, then reset bold (keep color for text)
        icon_formatted = f"{icon_format}{color}{icon}{Colors.RESET}{color}"
    else:
        icon_formatted = f"{color}{icon}"
    
    print(f"{icon_formatted}{spacing}{message}{Colors.RESET}", flush=True)


def print_success(message: str):
    """Print success message using SUCCESS style from palette."""
    style = StylePalette.SUCCESS
    icon = style['icon']
    icon_format = style['icon_format'] or ''
    spacing = style['spacing']
    color = style['color']
    
    icon_formatted = f"{icon_format}{icon}{Colors.RESET}" if icon_format else icon
    print(f"{color}{icon_formatted}{spacing}{message}{Colors.RESET}", flush=True)


def main():
    """Demonstrate all terminal output patterns using style palette."""
    # Boxed header (uses MAIN_TITLE style)
    write_boxed_header("Terminal Output Demonstration")
    print()  # Blank line after boxed header
    
    # Regular header (uses SUB_HEADER style)
    write_header("Example Section")
    print()  # Blank line after header
    
    # Info message (uses INFO style - icon is bold, text is normal)
    print_info("This is an info message with the ｉ icon")
    print_info("Info messages use color #0099ff from the style palette")
    
    # Warning message (uses WARNING style - has blank line above)
    print_warning("This is a warning message with the ⚠ icon")
    print_warning("Warning messages have a blank line above and are colored yellow")
    
    # Error message (uses ERROR style)
    print_error("This is an error message with the ✗ icon")
    print_error("Error messages use red color from the style palette")
    
    # Success message (uses SUCCESS style)
    print_success("This is a success message with the ✔ icon")
    print_success("Success messages use green color from the style palette")
    
    print()  # Final blank line


if __name__ == '__main__':
    main()












